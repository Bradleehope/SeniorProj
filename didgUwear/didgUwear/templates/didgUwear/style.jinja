{% endblock %}
{% block maincontent %}
<div class="row">
  <div class="container">
    <div class="col-sm-11">
      <input type="text" id="shirtStyle">
      <button class="styleButton" onclick="findStyle() value="Style">Style</button>
      {{current_shirt_style}}

    </div>
  </div>
</div>
{% endblock maincontent %}