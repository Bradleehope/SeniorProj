{% extends "didgUwear/base.jinja" %}
{% block addtohead %}
  <style>
    function findStyle(){
      var shirt_style = $('#shirtStyle').val();
      $.getJSON("{{ url('styleinput', input='INPUT_PH') }}".replace('INPUT_PH', shirt_style), styleUpdate);
    }

    function styleUpdates(data){
      sessionStorage.setItem('current_shirt_style, data)
      location.reload();
    }
  </style>
{% endblock %}
{% block title %}
