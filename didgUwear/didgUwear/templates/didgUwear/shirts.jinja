{% extends "didgUwear/base.jinja" %}
{% block title %}
Home
{% endblock %}
{% block maincontent %}
<div class="row">
    <div class="col-sm-12">
    <h2 class="welcomeBanner"> Welcome Bradlee</h2>
    </div>
</div>
<div class="row">
    <div class="col-sm-2 sideLinks">
        <a class="sideLinks" href="closet"> All </a><br>
        <a class="sideLinks" href="shirts"> Shirts</a><br>
        <a class="sideLinks" href="pants"> Pants </a><br>
        <a class="sideLinks" href="accessories"> Accessories</a><br>
    </div>
    <div class ="col-sm-9 closetDisplay">
      {% for shirt in shirts %}
        <ul class="list-unstyled">
          <li class="media">
            <img src="/static/didgUwear/media/clothes/{{shirt.img_link}}" style="width:150px; height:150px">
            <div class="media-body">
              <div style="padding: 5px;">
                <h3 class="mt-0 mb-1" >{{shirt.nickname}}</h3>
                {{shirt.primary_color}} {{shirt.secondary_color}} {{shirt.pattern}} shirt <br>
                Perfect for:{{shirt.weather}} weather <br>
                <a class="btn primaryBtn" style="color:mediumorchid;"href="{% url 'deleteItem' nickname=shirt.nickname, clothing='shirts' %}"> Delete</a>
              </div>
            </div>
          </li>
        </ul>

      {% endfor %}
    </div>
    <div class="col-sm-1">
    </div>


</div>

{% endblock maincontent %}

